            "url": {
              "raw": "{{baseUrl}}/api/cart/{{userId}}/item/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "cart", "{{userId}}", "item", "1"]
            },
            "description": "Remove item from cart (requires authentication)"
          },
          "response": []
